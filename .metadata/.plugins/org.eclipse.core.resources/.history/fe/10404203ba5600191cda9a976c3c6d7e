package hangMan;
import java.util.*;

public class HangMan {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//hangMan 게임 만들기
		//단어는 한단어임
		//답 : printer
		//
		//String 배열 : printer
		//mitjool배열 : _______
		
		//한글자만 입력받아  printer글자 중 하나냐?
		//없으면 그냥 _ 출력
		//있으면 한글자를 그자리에 대신 출력
		//Scanner, equals()
		Scanner sc = new Scanner(System.in);
		String insert;
		String[] arr = {"happy","day"};
		
		int internal;
		int index = (int)Math.random()*arr.length+1; //랜덤으로 하나 고르는 숫자
		for(int i=0;i<(arr[index]).length();i++)
		{
			System.out.print("_ ");//일단 자리수만큼 출력
			
		}
		for(int j=0;j<6;j++)//게임 총 6번 기회
		{
			System.out.print("insert the Charactor! >> ");
			insert = sc.next(); //추측문자 입력
			if(arr[index].contains(insert))
			{
				internal = arr[index].indexOf(insert);
				for(int k=0;k<(arr[index]).length();k++) 
				{
					if(k!=internal)
					{
						System.out.print("_ ");
					}
					else if(k==internal)
					{
						System.out.print(arr[internal]);
					}
				}
			}
			else
			{
				System.out.println("Try again..");
				continue;
			}
			
		}
		
		
		sc.close();
		

	}

}
